<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/itembook_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/itembook_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tool_titleitembook_recyclerview"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/distance_image"
            android:layout_marginTop="@dimen/distance_parente"
            app:layout_constraintStart_toEndOf="@id/itembook_image"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/itembook_description"
            android:layout_width="@dimen/widthtext_descriptionbook"
            android:layout_height="@dimen/highttext_desctiptionbook"
            android:text="@string/tool_descriptionitembook_recyclerview"
            android:textColor="@color/black"
            android:textSize="@dimen/descriptiontext_size"
            app:layout_constraintStart_toStartOf="@id/itembook_title"
            app:layout_constraintTop_toBottomOf="@id/itembook_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>